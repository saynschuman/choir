<!DOCTYPE html>
<html>
<head>
  <title>Choir</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">
    <header class="blog-header py-3">
      <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
          <a href="<%= root_path %>" class="text-muted">Молодежный хор</h5>
          </div>
      <!--    <div class="col-4 text-center">
            <a class="blog-header-logo text-dark" href="#">Large</a>
          </div> -->
          <div class="col-4 d-flex justify-content-end align-items-center">
            <% if user_signed_in? %>
            <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary" %>
            <% else %>
            <%= link_to "Вход", new_user_session_path, class: "btn btn-sm btn-outline-secondary" %>
            <% end %>
          </div>

        </header>
      </div>
      <div class="container">      
        <div class="row">
          <div class="col-md-12">
            <% flash.each do |name, message| %>
            <div class="alert <%= bootstrap_class_for(name) %>">
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="container">
        <%= yield %>
      </div>
    </body>
    </html>
